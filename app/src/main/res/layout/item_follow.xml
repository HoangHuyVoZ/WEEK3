<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_margin="5dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="60dp"
            app:cardCornerRadius="60dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@color/colorPrimary"
                android:id="@+id/imageFollow"
                ></ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_user"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="fdsfsdfsdf"
            android:fontFamily="@font/noirpro_bold"
            android:textColor="#000"
            android:layout_toRightOf="@id/card"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_circle"
            android:layout_below="@id/tv_user"
            android:layout_toRightOf="@id/card"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/btn_next_Fol"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="@color/colorGrayEnable"
            android:clickable="true"
            android:fontFamily="@font/noirpro_medium"
            android:gravity="center"
            android:text="Follow"
            android:textAllCaps="false"
            android:textColor="#Ffff" />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/card"
            android:id="@+id/card3"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/card2"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/card"
        android:id="@+id/card1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/imageUser2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/card2"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/card1"
            android:layout_below="@id/card"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageUser3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>